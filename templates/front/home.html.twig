<script>
document.querySelectorAll('.category-toggle').forEach(function(toggle) {
    toggle.addEventListener('click', function(event) {
        event.preventDefault();  
        var targetId = this.getAttribute('data-target');
        var target = document.querySelector(targetId);
        var isOpen = target.classList.contains('show');
        document.querySelectorAll('.navbar-nav .collapse.show').forEach(function(openSubcategory) {
            if (openSubcategory.id !== target.id) {
                openSubcategory.classList.remove('show');
            }
        });
        
        if (isOpen) {
            target.classList.remove('show');
        } else {
            target.classList.add('show');
        }
    });
    toggle.querySelector('.category-checkbox').addEventListener('click', function(event) {
        event.stopPropagation();
    });
});

$(document).ready(function() {

    $('.category-checkbox').on('change', function() {
         $('#product-container').empty();
        updateProducts();
    });
    
    
    var currentPage = 1;
    var productsPerPage = 6;

    $(document).on('click', '.load-more-button', function() {
        var selectedCategories = [];
    var selectedSubcategories = [];
        currentPage++;
        loadProducts(selectedCategories,selectedSubcategories,true);
    });

    function updateProducts() {
        selectedCategories = getSelectedCategories();
        selectedSubcategories = getSelectedSubcategories();
        currentPage = 1;
        loadProducts(selectedCategories, selectedSubcategories);
    }

    var indexes = 0;

    function getSelectedCategories() {
        var categories = [];
        $('input[name="category"]:checked').each(function() {
            var subcategories = $(this).closest("div").find('div.dropdown-menu');
            var subcategoriesInput = subcategories.find('input.category-checkbox');
            var checkedCount = $(subcategoriesInput).filter(':checked').length;
            var categoryId = $(this).val();
            
            if (checkedCount > 0) {
                var indexToRemove = categories.indexOf(categoryId);
                if (indexToRemove !== -1) {
                    categories.splice(indexToRemove, 1);
                }
            } else {
                if (categories.indexOf(categoryId) === -1) {
                    categories.push(categoryId);
                }
            }
            indexes++;
        });
        return categories;
    }

    function getSelectedSubcategories() {
        var subcategories = [];
        $('input[name="subcategory"]:checked').each(function() {
            var subCategoryId = $(this).val();
            subcategories.push(subCategoryId);
        })
        return subcategories;
    }

    loadProducts(selectedCategories,selectedSubcategories);
    
    function loadProducts(selectedCategories,selectedSubcategories,loadMore) {
        var url = '{{path('get.product')}}'
        $.ajax({
            url: url,
            method: 'POST', 
            contentType: 'application/json', 
            data: JSON.stringify({ categories: selectedCategories, subcategories: selectedSubcategories, page: currentPage, perPage: productsPerPage}),
           success: function(response) {
            if (response.success == true) {
                var formattedProducts = response.productsHtml;
                $('#product-container').append(formattedProducts);
            }
            },
            error: function(xhr, status, error) {
                console.error(error);
            }
        });
    }

});

$(document).ready(function() {
    $(document).on('click', '.Add-To-Cart', function() {
        var addButton = $(this);
        var removeButton = addButton.next('.Remove-From-Cart');
        var productId = addButton.data("product-id");
        var url = '{{ path('add.cart') }}';
        $.ajax({
            url: url,
            method: 'POST',
            data: JSON.stringify({ productId: productId }),
            success: function(response) {
                if (response.success) {
                    $('.cart-count').text(response.cartCount);
                    addButton.hide();
                    removeButton.show();
                }
            },
            error: function(xhr, status, error) {
                console.error(error);
            }
        });
    });

    $(document).on('click', '.Remove-From-Cart', function() {
        var removeButton = $(this);
        var addButton = removeButton.prev('.Add-To-Cart');
        var productId = removeButton.data("product-id");
        var url = '{{ path('remove.cart') }}';
        $.ajax({
            url: url,
            method: 'POST',
            data: JSON.stringify({ productId: productId }),
            success: function(response) {
                if (response.success) {
                    $('.cart-count').text(response.cartCount);
                    addButton.show();
                    removeButton.hide();
                }
            },
            error: function(xhr, status, error) {
                console.error(error);
            }
        });
    });

});


</script>

